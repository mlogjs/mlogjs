{
  "name": "mlogjs",
  "version": "0.5.2",
  "description": "Compiler that compiles Javascript to Mindustry Logic Code.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "bin": "./dist/bin.cjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf ../docs dist build",
    "build": "rollup -c",
    "build:dev": "rollup -c --environment DEV",
    "dev": "ts-node src/bin",
    "test": "jest",
    "coverage": "jest --coverage",
    "start": "pnpm run build && pnpm i -g . && mlogjs",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlogjs/mlogjs.git"
  },
  "keywords": [
    "mindustry",
    "mindustry-logic",
    "mlog"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlogjs/mlogjs/issues"
  },
  "homepage": "https://github.com/mlogjs/mlogjs#readme",
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@babel/types": "^7.22.5",
    "chalk": "^4.1.2",
    "cli-highlight": "^2.1.11",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^5.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "@types/yargs": "^17.0.24",
    "jest": "^29.6.1",
    "rollup": "^3.26.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.0",
    "typescript": "*"
  },
  "files": [
    "build",
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ]
}
