{
  "name": "mlogjs",
  "version": "0.2.2",
  "description": "Compiler that compiles Javascript to Mindustry Logic Code.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "bin": "./dist/index.cjs",
  "types": "./dist/types",
  "scripts": {
    "clean": "rm -rf ../docs dist build",
    "build": "rollup -c",
    "dev": "ts-node src/bin",
    "test": "jest",
    "coverage": "jest --coverage",
    "docs:doc": "mkdir -p ../docs && cp -r doc/. ../docs",
    "docs:lib": "typedoc --out ../docs/lib lib/*",
    "docs:src": "typedoc --out ../docs/src src/index.ts",
    "docs": "run-p docs:lib docs:src docs:doc",
    "start": "npm run build && npm i -g . && mlogjs",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weisrc/mlogjs.git"
  },
  "packageManager": "yarn@3.2.0",
  "keywords": [],
  "author": "str1z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weisrc/mlogjs/issues"
  },
  "homepage": "https://github.com/weisrc/mlogjs#readme",
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^5.15.0",
    "cli-highlight": "^2.1.11",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/estree": "^0.0.51",
    "@types/jest": "^27.4.1",
    "@types/node": "^15.3.0",
    "@types/yargs": "^16.0.1",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.70.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.12",
    "typescript": "*"
  },
  "files": [
    "build",
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ]
}
